          },
          "rainTotal": {
            "title": "Rain Total",
            "type": "boolean",
            "required": false
          },
          "solarRadiation": {
            "title": "Solar Radiation",
            "type": "boolean",
            "required": false
          },
          "uvIndex": {
            "title": "UV Index",
            "type": "boolean",
            "required": false
          },
          "indoorTemperature": {
            "title": "Indoor Temperature",
            "type": "boolean",
