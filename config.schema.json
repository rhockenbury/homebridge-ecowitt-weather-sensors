{
  "pluginAlias": "Ecowitt",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "<p align=\"center\"><img width=\"40%\" src=\"https://raw.githubusercontent.com/rhockenbury/homebridge-ecowitt-weather-sensors/master/docs/assets/ecowitt-logo-text.png\"><br><a href=\"https://github.com/rhockenbury/homebridge-ecowitt-weather-sensors/tree/master?tab=readme-ov-file#configuration\">Configuration Docs</a> | <a href=\"https://github.com/rhockenbury/homebridge-ecowitt-weather-sensors/issues/new/choose\">Report an Issue</a> | <a href=\"https://github.com/rhockenbury/homebridge-ecowitt-weather-sensors/wiki/V2-Migration-Guide\">V2 Migration Guide</a></p><p align=\"center\">",
  "schema": {
    "type": "object",
    "properties": {
      "baseStation": {
        "type": "object",
        "properties": {
          "mac": {
            "title": "MAC Address",
            "type": "string",
            "pattern": "^([A-Fa-f0-9]{2}:){5}[A-Fa-f0-9]{2}$",
            "required": true,
            "placeholder": "e.g. 2c:54:91:88:c9:e3",
            "description": "The MAC address of the console or gateway"
          },
          "port": {
            "title": "Port",
            "type": "integer",
            "default": 8080,
            "minimum": 1024,
            "description": "Port number to listen for data reports"
          },
          "path": {
            "title": "Path",
            "type": "string",
            "pattern": "^/[A-Za-z/]+[A-Za-z]$",
            "required": true,
            "default": "/data/report",
            "description": "Host path to receive data reports"
          }
        }
      },
      "nameOverrides": {
        "type": "array",
        "items": {
          "title": "Name Override",
          "type": "object",
          "notitle": true,
          "properties": {
            "key": {
              "title": "Sensor ID",
              "type": "string"
            },
            "value": {
              "title": "Name Override",
              "type": "string"
            }
          }
        }
      },
      "additional": {
        "type": "object",
        "properties": {
          "staticNames": {
            "title": "Static Names",
            "type": "string",
            "required": true,
            "default": false,
            "description": "Enable or disable weather metric values <br> in the service names",
            "enum": [true, false],
            "enumNames": ["Enabled", "Disabled"]
          },
          "validateMac": {
            "title": "MAC Address Validation",
            "type": "string",
            "required": true,
            "default": true,
            "description": "Verify the MAC address in each received <br> data report",
            "enum": [true, false],
            "enumNames": ["Enabled", "Disabled"]
          },
          "luxFactor": {
            "title": "Lux Conversion Factor",
            "type": "number",
            "required": true,
            "default": 126.7,
            "description": "Factor to convert irradiance (W/mÂ²) <br> to illuminance (lux)"
          },
          "acceptAnyPath": {
            "title": "Accept Any Path",
            "type": "string",
            "required": true,
            "default": false,
            "description": "Process any data report regardless <br> of URL path received on",
            "enum": [true, false],
            "enumNames": ["Enabled", "Disabled"]
          },
          "validateTimestamp": {
            "title": "Timestamp Validation",
            "type": "string",
            "required": true,
            "default": true,
            "description": "Verify the timestamp in each received <br> data report",
            "enum": [true, false],
            "enumNames": ["Enabled", "Disabled"]
          }
        }
      },
      "thresholds": {
        "type": "object",
        "properties": {
          "windSpeed": {
            "title": "Wind Speed",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "windGustSpeed": {
            "title": "Wind Gust Speed",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "windMaxDailySpeed": {
            "title": "Wind Max Daily Speed",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainRate": {
            "title": "Rain Rate",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainEventTotal": {
            "title": "Rain Event Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainHourlyTotal": {
            "title": "Rain Hourly Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainDailyTotal": {
            "title": "Rain Daily Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainWeeklyTotal": {
            "title": "Rain Weekly Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainMonthlyTotal": {
            "title": "Rain Monthly Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "rainYearlyTotal": {
            "title": "Rain Monthly Total",
            "type": "number",
            "notitle": true,
            "required": false
          },
          "uvIndex": {
            "title": "UV Index",
            "type": "number",
            "notitle": true,
            "required": false
          }
        }
      },
      "hidden": {
        "type": "object",
        "properties": {
          "windDirection": {
            "title": "Wind Direction",
            "type": "boolean",
            "required": false
          },
          "windSpeed": {
            "title": "Wind Speed",
            "type": "boolean",
            "required": false
          },
          "windGustSpeed": {
            "title": "Wind Gust Speed",
            "type": "boolean",
            "required": false
          },
          "windMaxDailySpeed": {
            "title": "Wind Max Daily Speed",
            "type": "boolean",
            "required": false
          },
          "rainRate": {
            "title": "Rain Rate",
            "type": "boolean",
            "required": false
          },
          "rainEventTotal": {
            "title": "Rain Event Total",
            "type": "boolean",
            "required": false
          },
          "rainHourlyTotal": {
            "title": "Rain Hourly Total",
            "type": "boolean",
            "required": false
          },
          "rainDailyTotal": {
            "title": "Rain Daily Total",
            "type": "boolean",
            "required": false
          },
          "rainWeeklyTotal": {
            "title": "Rain Weekly Total",
            "type": "boolean",
            "required": false
          },
          "rainMonthlyTotal": {
            "title": "Rain Monthly Total",
            "type": "boolean",
            "required": false
          },
          "rainYearlyTotal": {
            "title": "Rain Yearly Total",
            "type": "boolean",
            "required": false
          },
          "solarRadiation": {
            "title": "Solar Radiation",
            "type": "boolean",
            "required": false
          },
          "uvIndex": {
            "title": "UV Index",
            "type": "boolean",
            "required": false
          },
          "temperature": {
            "title": "Temperature",
            "type": "boolean",
            "required": false
          },
          "humidity": {
            "title": "Humidity",
            "type": "boolean",
            "required": false
          },
          "soilMoisture": {
            "title": "Soil Moisture",
            "type": "boolean",
            "required": false
          },
          "lightning": {
            "title": "Lightning",
            "type": "boolean",
            "required": false
          },
          "pm25AirQuality": {
            "title": "PM2.5 Air Quality",
            "type": "boolean",
            "required": false
          },
          "waterLeak": {
            "title": "Water Leak",
            "type": "boolean",
            "required": false
          }
        }
      },
      "units": {
        "type": "object",
        "properties": {
          "wind": {
            "title": "Wind Speed",
            "type": "string",
            "default": "mph",
            "required": true,
            "oneOf": [
              {
                "title": "Miles / Hour",
                "enum": [
                  "mph"
                ]
              },
              {
                "title": "Knots",
                "enum": [
                  "kts"
                ]
              },
              {
                "title": "Kilometers / Hour",
                "enum": [
                  "kph"
                ]
              },
              {
                "title": "Meters / Second",
                "enum": [
                  "mps"
                ]
              }
            ]
          },
          "rain": {
            "title": "Rain Fall",
            "type": "string",
            "default": "in",
            "required": true,
            "oneOf": [
              {
                "title": "Millimeters",
                "enum": [
                  "mm"
                ]
              },
              {
                "title": "Inches",
                "enum": [
                  "in"
                ]
              }
            ]
          },
          "distance": {
            "title": "Distance",
            "type": "string",
            "default": "mi",
            "required": true,
            "oneOf": [
              {
                "title": "Kilometers &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;",
                "enum": [
                  "km"
                ]
              },
              {
                "title": "Miles",
                "enum": [
                  "mi"
                ]
              }
            ]
          },
          "temperature": {
            "title": "Temperature",
            "type": "string",
            "default": "fh",
            "required": true,
            "oneOf": [
              {
                "title": "Fahrenheit",
                "enum": [
                  "fh"
                ]
              },
              {
                "title": "Celcius",
                "enum": [
                  "ce"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "form": [
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": true,
      "title": "Data Report",
      "items": [
        {
          "type": "help",
          "helpvalue": "<p class=\"help-block\">Configure the data report service to receive weather data</p>"
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "6 6",
          "notitle": true,
          "items": [
            "baseStation.mac"
          ]
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "3 3",
          "notitle": true,
          "items": [
            "baseStation.port",
            "baseStation.path"
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Units",
      "displayFlex": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<p class=\"help-block\">Select the units for the weather data</p>"
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "3 3",
          "items": [
            "units.wind",
            "units.distance"
          ]
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "3 3",
          "items": [
            "units.temperature",
            "units.rain"
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Hide Values",
      "displayFlex": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<p class=\"help-block\">Select the weather data that should not be displayed. Changes take effect when a new data report is received <em>after</em> the Homebridge restart</p>"
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "2 2",
          "items": [
            {
              "type": "flex",
              "items": [
                "hidden.windDirection",
                "hidden.windSpeed",
                "hidden.windGustSpeed",
                "hidden.windMaxDailySpeed",
                "hidden.rainRate",
                "hidden.rainEventTotal",
                "hidden.rainHourlyTotal"
              ]
            },
            {
              "type": "flex",
              "items": [
                "hidden.rainDailyTotal",
                "hidden.rainWeeklyTotal",
                "hidden.rainMonthlyTotal",
                "hidden.rainYearlyTotal",
                "hidden.solarRadiation",
                "hidden.uvIndex",
                "hidden.temperature"
              ]
            },
            {
              "type": "flex",
              "items": [
                "hidden.humidity",
                "hidden.soilMoisture",
                "hidden.lightning",
                "hidden.pm25AirQuality",
                "hidden.waterLeak"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Trigger Thresholds",
      "displayFlex": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<div class=\"help-block\">Configure the thresholds to trigger the sensor. Leave empty for no trigger. Select units first before configuring thresholds</div>"
        },
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "3 3",
          "items": [
            {
              "type": "flex",
              "items": [
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Speed (mph)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Speed (kts)<strong>&nbsp;&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kts';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Speed (kph)<strong>&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Speed (mps)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mps';"
                  }
                },
                "thresholds.windSpeed",
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Gust Speed (mph)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Gust Speed (kts)<strong>&nbsp;&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kts';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Gust Speed (kph)<strong>&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Gust Speed (mps)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mps';"
                  }
                },
                "thresholds.windGustSpeed",
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Max Daily Speed (mph)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Max Daily Speed (kts)<strong>&nbsp;&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kts';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Max Daily Speed (kph)<strong>&nbsp;",
                  "condition": {
                    "functionBody": "return model.units.wind === 'kph';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Wind Max Daily Speed (mps)<strong>",
                  "condition": {
                    "functionBody": "return model.units.wind === 'mps';"
                  }
                },
                "thresholds.windMaxDailySpeed",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Rate (in/h)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Rate (mm/h)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainRate",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Event Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Event Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainEventTotal",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Hourly Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Hourly Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainHourlyTotal"
              ]
            },
            {
              "type": "flex",
              "items": [
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Daily Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Daily Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainDailyTotal",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Weekly Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Weekly Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainWeeklyTotal",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Monthly Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Monthly Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainMonthlyTotal",
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Yearly Total (in)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'in';"
                  }
                },
                {
                  "type": "help",
                  "helpvalue": "<strong>Rain Yearly Total (mm)<strong>",
                  "condition": {
                    "functionBody": "return model.units.rain === 'mm';"
                  }
                },
                "thresholds.rainYearlyTotal",
                {
                  "type": "help",
                  "helpvalue": "<strong>UV Index<strong>"
                },
                "thresholds.uvIndex"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Name Overrides",
      "displayFlex": true,
      "items": [
        {
          "type": "help",
          "helpvalue": "<p class=\"help-block\">Configure custom names for the services on a sensor. Changes take effect when a new data report is received <em>after</em> the Homebridge restart</p>"
        },
        {
          "key": "nameOverrides",
          "add": "Add Another Override",
          "notitle": true,
          "type": "flex",
          "items": [
            {
              "type": "flex",
              "flex-flow": "row wrap",
              "flex": "3 3",
              "items": [
                "nameOverrides[].key",
                "nameOverrides[].value"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Advanced Options",
      "displayFlex": true,
      "items": [
        {
          "type": "flex",
          "flex-flow": "row wrap",
          "flex": "3 3",
          "items": [
            {
              "type": "flex",
              "items": [
                "additional.staticNames",
                "additional.validateMac",
                "additional.validateTimestamp"
              ]
            },
            {
              "type": "flex",
              "items": [
                "additional.luxFactor",
                "additional.acceptAnyPath"
              ]
            }
          ]
        }
      ]
    }
  ]
}
