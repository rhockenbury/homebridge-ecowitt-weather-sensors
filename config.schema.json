      "customHidden": {
        "type": "array",
        "items": {
          "type": "string",
          "title": "Service ID&nbsp;<strong class=\"text-danger\">*</strong>",
          "minLength": 5,
          "maxLength": 50,
          "placeholder": "eg. WS85:rainRate, WH51CH1:waterLeak, BASE:indoorTemperature"
        }
      },
      "units": {
        "type": "object",
